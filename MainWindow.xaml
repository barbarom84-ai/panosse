<Window x:Class="Panosse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panosse" 
        Height="550" 
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Icon="assets/panosse.ico"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F5F5F5" Offset="0"/>
            <GradientStop Color="#FFFFFF" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Animation de pulsation -->
        <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.0" Value="1.0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:1.0" Value="1.0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Style pour le bouton circulaire bleu -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse x:Name="ellipse" Fill="{TemplateBinding Background}">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="25" ShadowDepth="8" Opacity="0.4" Color="#2196F3"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ellipse" Property="Fill" Value="#42A5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ellipse" Property="Fill" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ellipse" Property="Fill" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour le bouton Quitter -->
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#757575"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15"
                                Width="30" Height="30">
                            <TextBlock Text="Ã—" 
                                       FontSize="24" 
                                       Foreground="{TemplateBinding Foreground}"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Margin="0,-3,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEBEE"/>
                                <Setter Property="Foreground" Value="#F44336"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour la barre de progression -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="Height" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Barre de notification de mise Ã  jour -->
        <Border x:Name="UpdateBar"
                Background="#4CAF50"
                Height="40"
                VerticalAlignment="Top"
                Visibility="Collapsed"
                Opacity="0">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3" Color="Black"/>
            </Border.Effect>
            <Grid Margin="15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- IcÃ´ne et message -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ””" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="UpdateMessage"
                                   Text="Une nouvelle version est disponible !"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Bouton Mettre Ã  jour -->
                    <Button x:Name="BtnMettreAJour"
                            Grid.Column="1"
                            Content="Mettre Ã  jour"
                            Click="BtnMettreAJour_Click"
                            Background="White"
                            Foreground="#4CAF50"
                            BorderThickness="0"
                            Padding="15,5"
                            FontSize="12"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F5F5F5"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Bouton fermer -->
                    <Button x:Name="BtnFermerUpdate"
                            Grid.Column="2"
                            Content="Ã—"
                            Click="BtnFermerUpdate_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="20"
                            FontWeight="Bold"
                            Width="25"
                            Height="25"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="3">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Margin="0,-3,0,0"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <!-- Barre de progression du tÃ©lÃ©chargement -->
                <ProgressBar x:Name="DownloadProgressBar"
                             Grid.Row="1"
                             Height="3"
                             Minimum="0"
                             Maximum="100"
                             Value="0"
                             Visibility="Collapsed"
                             Margin="0,5,0,0"
                             Background="Transparent"
                             Foreground="White"
                             BorderThickness="0"/>
            </Grid>
        </Border>

        <!-- Bouton Quitter en haut Ã  droite -->
        <Button x:Name="BtnQuitter" 
                Style="{StaticResource CloseButtonStyle}"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,10,10,0"
                Click="BtnQuitter_Click"/>

        <!-- Bouton Ã€ propos en bas Ã  gauche -->
        <Button x:Name="BtnAPropos"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="15,0,0,15"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Click="BtnAPropos_Click"
                ToolTip="Ã€ propos de Panosse">
            <TextBlock Text="â„¹ï¸" FontSize="20" Opacity="0.6"/>
        </Button>

        <!-- Titre -->
        <TextBlock Text="Panosse" 
                   FontSize="36" 
                   FontWeight="Light" 
                   Foreground="#424242" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,30,0,0"/>

        <!-- Zone centrale -->
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Margin="0,-30,0,0">
            
            <!-- Bouton circulaire avec icÃ´ne -->
            <Button x:Name="BtnNettoyer" 
                    Style="{StaticResource CircleButtonStyle}" 
                    Width="150" 
                    Height="150"
                    Click="BtnNettoyer_Click"
                    RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Button.RenderTransform>
                <Grid>
                    <!-- Image panosse.png -->
                    <Image Source="assets/panosse.png" 
                           Width="80" 
                           Height="80"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                </Grid>
            </Button>

            <!-- Texte sous le bouton -->
            <TextBlock x:Name="BtnText"
                       Text="Passer la panosse" 
                       FontSize="18" 
                       FontWeight="SemiBold"
                       Foreground="#424242" 
                       HorizontalAlignment="Center" 
                       Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Zone de statut en bas -->
        <StackPanel VerticalAlignment="Bottom" Margin="30,0,30,30">
            <!-- Barre de progression -->
            <ProgressBar x:Name="PrgBar" 
                         Style="{StaticResource ModernProgressBar}"
                         Minimum="0" 
                         Maximum="100" 
                         Value="0" 
                         Visibility="Collapsed"
                         Margin="0,0,0,10"/>

            <!-- Liste des tÃ¢ches -->
            <ScrollViewer x:Name="TaskScrollViewer"
                          MaxHeight="100"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Visibility="Collapsed"
                          Opacity="0"
                          Margin="0,0,0,10">
                <ItemsControl x:Name="TaskList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       FontSize="11" 
                                       Foreground="#9E9E9E"
                                       TextWrapping="Wrap"
                                       Margin="0,1,0,1"
                                       Opacity="0.9"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Message de statut -->
            <TextBlock x:Name="StatusText" 
                       Text="" 
                       FontSize="14" 
                       Foreground="#757575" 
                       TextAlignment="Center" 
                       TextWrapping="Wrap"
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Overlay "Ã€ propos" -->
        <Grid x:Name="OverlayAPropos"
              Background="#CC000000"
              Visibility="Collapsed"
              Opacity="0"
              MouseLeftButtonDown="OverlayAPropos_MouseDown">
            
            <!-- Panneau Ã€ propos -->
            <Border Background="White"
                    CornerRadius="15"
                    Width="320"
                    MaxHeight="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="30,25,30,25">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel>
                    <!-- Logo et nom -->
                    <Image Source="assets/panosse.png"
                           Width="60"
                           Height="60"
                           Margin="0,0,0,15"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    
                    <TextBlock Text="Panosse"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock x:Name="VersionText"
                               Text="v1.0.0"
                               FontSize="14"
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <!-- Slogan -->
                    <TextBlock Text="La serpillÃ¨re numÃ©rique"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock Text="pour un PC tout propre"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,25"/>
                    
                    <!-- SÃ©parateur -->
                    <Border Height="1"
                            Background="#E0E0E0"
                            Margin="0,0,0,20"/>
                    
                    <!-- DÃ©veloppeur -->
                    <TextBlock Text="DÃ©veloppÃ© par"
                               FontSize="12"
                               Foreground="#9E9E9E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    
                    <TextBlock Text="Marco"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#424242"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>
                    
                    <!-- Lien GitHub -->
                    <TextBlock x:Name="LinkGitHub"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30">
                        <Hyperlink NavigateUri="https://github.com/barbarom84-ai/panosse"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="#2196F3"
                                   TextDecorations="None">
                            <Run Text="ðŸ”— GitHub"/>
                        </Hyperlink>
                    </TextBlock>
                    
                    <!-- Bouton Rechercher des mises Ã  jour -->
                    <Button x:Name="BtnRechercherMAJ"
                            Content="Rechercher des mises Ã  jour"
                            Click="BtnRechercherMAJ_Click"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="25,12"
                            FontSize="13"
                            FontWeight="Bold"
                            Cursor="Hand"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20"
                            IsEnabled="True">
                        <Button.Effect>
                            <DropShadowEffect Color="#4CAF50" 
                                            BlurRadius="15" 
                                            ShadowDepth="2" 
                                            Opacity="0.5"/>
                        </Button.Effect>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="10"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#66BB6A"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#388E3C"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#E0E0E0"/>
                                        <Setter Property="Foreground" Value="#9E9E9E"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Bouton Retour -->
                    <Button Content="Retour"
                            Click="BtnRetourAPropos_Click"
                            Background="#2196F3"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="30,10"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            HorizontalAlignment="Center">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#2196F3"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#42A5F5"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#1976D2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
